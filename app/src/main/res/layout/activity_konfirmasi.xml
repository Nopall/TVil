<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tehvilla.apps.tehvilla.KonfirmasiFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/material_drawer_background">
        <ImageButton
            android:id="@+id/kembali"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@color/material_drawer_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"/>
        <TextView
            android:layout_marginLeft="@dimen/_28sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:text="KONFIRMASI PEMBAYARAN"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFF"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_30sdp">

            <TextView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="KONFIRMASI\nPEMBAYARAN"
                android:textSize="@dimen/_20sdp"/>

            <View android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/black" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:text="Terima Kasih telah bebelanja produk Teh Villa !\nBila Anda telah melakukan pembayaran\nmelalui TRANSFER KE BANK,\nkonfirmasikan pembayaran Anda disini agar\ndapat segera kami proses."/>

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="*"/>

            <EditText
                android:id="@+id/orderId"
                android:text="2032"
                android:padding="@dimen/_5sdp"
                android:textColor="#FF0000"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgedittext"/>

            <TextView
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Bank Asal"
                android:id="@+id/textView2" />

            <EditText
                android:id="@+id/bankAsal"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textColorHint="@color/material_drawer_secondary_text"
                android:background="@drawable/bgedittext"/>

            <TextView
                android:id="@+id/tvNamarekening"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=""/>

            <EditText
                android:id="@+id/namaRekening"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textColorHint="@color/material_drawer_secondary_text"
                android:background="@drawable/bgedittext"/>

            <TextView
                android:id="@+id/tvNominal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=""/>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/nominal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:inputType="number"
                android:textColorHint="@color/material_drawer_secondary_text"
                android:layout_height="wrap_content"
                android:background="@drawable/bgedittext"/>

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=""/>

            <EditText
                android:id="@+id/tanggal"
                android:textColor="@color/black"
                android:textColorHint="@color/material_drawer_secondary_text"
                android:inputType="none"
                android:padding="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgedittext"/>

            <TextView
                android:id="@+id/tvBukti"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text=""/>

            <ImageButton
                android:id="@+id/iBtnUpload"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/ic_upload"
                android:background="#FFF"/>

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="@dimen/_10sdp"
                android:text="* Wajib diisi"/>

            <Button
                android:id="@+id/btnKonfirmasi"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center|bottom"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="KONFIRMASI"
                android:background="@drawable/button_merah"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
