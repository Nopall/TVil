<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bantuan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.tehvilla.apps.tehvilla.BantuanActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/_8sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hubungi Kami Jika\nAda Kesulitan"
                android:textColor="#000"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/textView3" />

            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tinggalkan pesan kepada kami dengan mengisi form\ndi bawah ini"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingRight="@dimen/_30sdp">

                <TextView
                    android:id="@+id/tvNama"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/bgedittext"
                    android:textColorHint="@color/material_drawer_secondary_text"
                    android:textColor="@color/black"
                    android:id="@+id/etNama" />

                <TextView
                    android:id="@+id/tvTelepon"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/bgedittext"
                    android:hint=""
                    android:inputType="phone"
                    android:textColorHint="@color/material_drawer_secondary_text"
                    android:textColor="@color/black"
                    android:id="@+id/etTelepon" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/bgedittext"
                    android:hint=""
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/material_drawer_secondary_text"
                    android:textColor="@color/black"
                    android:id="@+id/etEmail" />

                <TextView
                    android:id="@+id/tvSubject"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/bgedittext"
                    android:hint=""
                    android:inputType="text"
                    android:textColorHint="@color/material_drawer_secondary_text"
                    android:textColor="@color/black"
                    android:id="@+id/etSubject" />

                <TextView
                    android:id="@+id/tvPesan"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@drawable/bgedittext"
                    android:padding="@dimen/_5sdp"
                    android:hint=""
                    android:gravity="top"
                    android:layout_gravity="top"
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/material_drawer_secondary_text"
                    android:textColor="@color/black"
                    android:id="@+id/etPesan" />

                <TextView
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Wajib Diisi"
                    android:textColor="#FF0000"/>

                <Button
                    android:id="@+id/btnKirim"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="KIRIM"
                    android:textColor="#fff"
                    android:background="@drawable/button_merah"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Atau"
                    android:textColor="@color/material_drawer_secondary_text"/>
                <Button
                    android:id="@+id/btnTeleponKami"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/button_birutelepon"
                    android:text="Langsung Telepon Kami"
                    android:textColor="#fff"
                    android:layout_gravity="center" />
                <Button
                    android:id="@+id/btnSmsKami"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:text="Langsung Sms Kami"
                    android:background="@drawable/button_birusms"
                    android:textColor="#fff"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>