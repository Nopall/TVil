<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_106sdp"
        android:background="@color/material_drawer_background"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/material_drawer_background">

            <ImageButton
                android:id="@+id/btnKembali"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_32sdp"
                android:src="@mipmap/icon_back"
                android:background="@color/material_drawer_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ULASAN"
                android:textSize="@dimen/_16sdp"
                android:textColor="#FFF"
                android:paddingLeft="@dimen/_100sdp"/>

        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:src="@drawable/ic_stepulasan"
            />

    </LinearLayout>

    <!--<android.support.v4.widget.SwipeRefreshLayout-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:id="@+id/swipeRefresh"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">

        <LinearLayout
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_30sdp"
            android:paddingLeft="@dimen/_30sdp"
            tools:ignore="MissingPrefix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jdl_detailpesanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="@dimen/_13sdp"
                android:text="Detail Pemesanan (ID 20617292)"
                fontPath="fonts/calibri_bold.ttf" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listUlasan"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:textColor="@color/black"
                    android:text="Total"/>

                <TextView
                    android:id="@+id/Total_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginLeft="@dimen/_31sdp"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:text="RP"/>

            </LinearLayout>



            <View android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/material_drawer_secondary_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="@dimen/_15sdp"
                android:text="Detail Pengiriman"
                android:textStyle="bold"
                fontPath="fonts/calibri_bold.ttf"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Nama Lengkap"/>

                <TextView
                    android:id="@+id/uNama"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Jessica"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Alamat Lengkap"/>

                <TextView
                    android:id="@+id/uAlamat"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="BCF, Jln. sekawan permai A2/No.14"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Provinsi"/>

                <TextView
                    android:id="@+id/uProvinsi"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Jawa Timur"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Kota"/>

                <TextView
                    android:id="@+id/uKota"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Sidoarjo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Kode Pos"/>

                <TextView
                    android:id="@+id/uPos"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="61217"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Nomer Telepon"/>

                <TextView
                    android:id="@+id/uTelepon"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="081290096117"/>

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@color/material_drawer_secondary_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="@dimen/_15sdp"
                android:text="Detail Pembayaran"
                fontPath="fonts/calibri_bold.ttf"/>

            <TextView
                android:id="@+id/jenisPembayaran"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                fontPath="fonts/calibri_bold.ttf"
                android:text="Transfer"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDetail1"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Tanggal Pengiriman"/>

                <TextView
                    android:id="@+id/etDetail1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="2016-2-2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDetail2"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Waktu Pengiriman"/>

                <TextView
                    android:id="@+id/etDetail2"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="12 : 12"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/halDetail3"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Nama Rekening"/>

                <TextView
                    android:id="@+id/namaRekening"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Teh Villa"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnSelesai"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="SELESAI"
                android:background="@drawable/button_merah"/>

        </LinearLayout>

    </ScrollView>
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->
</LinearLayout>