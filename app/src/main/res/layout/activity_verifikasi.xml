<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_verifikasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.tehvilla.apps.tehvilla.VerifikasiActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/material_drawer_background">

        <TextView
            android:layout_marginLeft="@dimen/_120sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:gravity="center_horizontal"
            android:text="VERIFIKASI"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        tools:ignore="MissingPrefix"
        android:padding="@dimen/_30sdp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:src="@drawable/ic_verifikasi"
            />

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verifikasikan Akun\nAnda Terlebih Dahulu"
            android:textColor="#000"
            android:textSize="@dimen/_18sdp"
            fontPath="fonts/calibri_bold.ttf"
            android:textAlignment="center" />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan kode verifikasi yang telah di kirim melalui sms ke \n\n nomor yang anda daftarkan"
            android:textColor="@color/material_drawer_secondary_text"
            android:textSize="@dimen/_9sdp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/etVerifikasi"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/bgedittext2"
            android:hint="Kode verifikasi"
            android:textAlignment="center"
            android:padding="@dimen/_5sdp"
            android:inputType="textPersonName"
            android:drawablePadding="@dimen/_8sdp"
            android:textColorHint="@color/material_drawer_secondary_text"
            android:textColor="#000"/>

        <Button
            android:id="@+id/btnVerifikasi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:text="Verifikasi"
            android:layout_marginBottom="@dimen/_25sdp"
            android:background="@drawable/button_merah"/>

        <TextView
            android:id="@+id/verifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_drawer_secondary_text"
            android:textAlignment="center"
            android:text="@string/verifikasi" />
    </LinearLayout>
</LinearLayout>
